{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "module": "es6",
    "target": "es5",
    "lib": ["es2016", "dom"],
    "jsx": "react",
    "allowJs": false,
    "outDir": "target/web/typescript",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    // Some dependencies add @types/ definitions we don't want (e.g. @types/node),
    // so this stops anything other than jest from being imported automatically
    "types": ["jest"]
  },
  "include": [
    "app/assets/frontend/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
